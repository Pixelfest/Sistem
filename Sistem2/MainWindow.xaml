<Window x:Class="Sistem2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:layerTypes="clr-namespace:Sistem2.LayerTypes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel LastChildFill="True">
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
			</MenuItem>
			<MenuItem Header="_Layers">
				<MenuItem Header="_Add layer">
					<MenuItem Header="Add _image layer" Click="AddImageLayer_Click"/>
			</MenuItem>
			</MenuItem>
			<MenuItem Header="_Draw" Click="Draw_OnClick" />

		</Menu>
		<StackPanel Width="150" DockPanel.Dock="Left">
			<GroupBox Name="ImageLayerProperties" Header="Image layer" Visibility="Collapsed" d:DataContext="{d:DesignInstance layerTypes:ImageLayer}">
				<StackPanel>
				<Image Source="{Binding Path=ImageSource}" />
				<TextBlock Text="{Binding Path=FileName}"></TextBlock>
				<Button Content="Load image" Click="ImageLayer_LoadImage_OnClick" />
				</StackPanel>
			</GroupBox>
		</StackPanel>
		<StackPanel Width="150" DockPanel.Dock="Right">
			<ListBox Name="LayersListBox" ItemsSource="{Binding}" SelectionChanged="LayersListBox_OnSelectionChanged" d:DataContext="{d:DesignInstance layerTypes:LayerBase}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<CheckBox IsChecked="{Binding Visible}"></CheckBox>
							<TextBlock Text="{Binding Name}"></TextBlock>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
		<Image Margin="0,0,0,0" Name="PreviewImage" />
	</DockPanel>
</Window>
