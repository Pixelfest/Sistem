<UserControl x:Class="Sistem2.PatternStereogramLayerProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistem2"
             xmlns:layerTypes="clr-namespace:Sistem2.ViewModels"
             mc:Ignorable="d" 
             
             d:DataContext="{d:DesignInstance local:PatternStereogramLayerProperties}">
	<StackPanel>
		<GroupBox Header="Pattern layer" Margin="{StaticResource ControlMargin}" >
			<StackPanel>
				<TextBlock Text="Pattern image"></TextBlock>
				<Button Click="LoadPatternImageButtonClick">
					<Image Source="{Binding Path=PatternImageSource}" Width="auto" Height="150"/>
				</Button>
				<TextBlock Text="{Binding Path=PatternImageFileName}"></TextBlock>
			</StackPanel>
		</GroupBox>
		<local:StereogramLayerProperties x:Name="StereogramLayerProperties" />
		<StackPanel Orientation="Horizontal">
			<Label Width="110">Pattern start</Label>
			<TextBox Width="40" Text="{Binding Path=PatternStart, StringFormat=N0}"></TextBox>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Width="110">Pattern end</Label>
			<TextBox Width="40" Text="{Binding Path=PatternEnd, StringFormat=N0}"></TextBox>
		</StackPanel>
	</StackPanel>
</UserControl>
