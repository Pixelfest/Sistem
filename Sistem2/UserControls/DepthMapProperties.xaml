<UserControl x:Class="Sistem2.DepthMapProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistem2"
             xmlns:layerTypes="clr-namespace:Sistem2.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:DepthMapProperties}">
	<StackPanel>
		<GroupBox Header="Depth image" Margin="{StaticResource ControlMargin}" >
			<StackPanel>
				<Button Click="LoadDepthImageButtonClick">
					<Image Source="{Binding Path=DepthImageSource}" Width="auto" Height="100"/>
				</Button>
				<TextBlock Text="{Binding Path=DepthImageFileName}"></TextBlock>
			</StackPanel>
		</GroupBox>
	</StackPanel>
</UserControl>
