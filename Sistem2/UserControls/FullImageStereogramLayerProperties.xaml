<UserControl x:Class="Sistem2.FullImageStereogramLayerProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistem2"
             xmlns:layerTypes="clr-namespace:Sistem2.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance layerTypes:FullImageStereogramLayer}">
	<StackPanel Margin="0">
		<GroupBox Header="Pattern layer" Margin="{StaticResource ControlMargin}" >
			<StackPanel>
				<Button Click="LoadPatternImageButtonClick">
					<Image Source="{Binding Path=PatternImageSource}" Width="auto" Height="100"/>
				</Button>
				<TextBlock Text="{Binding Path=PatternImageFileName}"></TextBlock>
			</StackPanel>
		</GroupBox>
		<local:StereogramLayerProperties x:Name="StereogramLayerProperties" />
		<DockPanel>
			<Label>Shift origin</Label>
			<TextBox Text="{Binding Path=Shift, StringFormat=N0}" Style="{StaticResource TextBoxRight}" MouseWheel="ShiftMouseWheel"></TextBox>
		</DockPanel>

	</StackPanel>
</UserControl>
