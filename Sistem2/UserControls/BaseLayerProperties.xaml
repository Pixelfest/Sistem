<UserControl x:Class="Sistem2.BaseLayerProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistem2"
             xmlns:layerTypes="clr-namespace:Sistem2.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance layerTypes:BaseLayer}">
	<StackPanel Margin="0">
		<DockPanel>
			<Label>Opacity</Label>
			<Slider x:Name="OversamplingSlider" IsSnapToTickEnabled="False" Value="{Binding Path=Opacity}" Maximum="1" Minimum="0" SmallChange="0.01" TickPlacement="Both"/>
		</DockPanel>
	</StackPanel>
</UserControl>
