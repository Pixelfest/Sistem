<UserControl x:Class="Sistem2.BackgroundLayerProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistem2"
             xmlns:layerTypes="clr-namespace:Sistem2.LayerTypes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150"
             d:DataContext="{d:DesignInstance layerTypes:BackgroundLayer}">
	    <GroupBox Header="Background layer" >
		    <StackPanel>
			    <TextBox Text="{Binding Path=ColorText}"></TextBox>
		    </StackPanel>
	    </GroupBox>
</UserControl>
