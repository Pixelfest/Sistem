<Window x:Class="Sistem.CopyrightMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistem"
        mc:Ignorable="d"
        Title="CopyrightMessage" Height="130" Width="600" Icon="Examples/Logo512.png">
	<StackPanel Orientation="Vertical" Margin="0,0,0,-53">
		<StackPanel Orientation="Horizontal" Margin="10">
			<Label Content="Copyright/credits message:" Width="160" />
			<TextBox x:Name="MessageTextBox" Height="48" AcceptsReturn="True" TextWrapping="Wrap" Text="© PixelFest 2018" MaxLines="2" Margin="0" HorizontalAlignment="Stretch" Width="400" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,10">
			<Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,0,10,10" Click="CancelButton_Click"/>
			<Button Content="Ok" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>
		</StackPanel>
	</StackPanel>
</Window>
